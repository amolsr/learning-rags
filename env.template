# RAG System Environment Configuration
# Copy this file to .env and update the values as needed

# ClickHouse Database Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=rag_db
CLICKHOUSE_TABLE=documents

# Ollama Configuration
OLLAMA_MODEL=mistral
OLLAMA_TEMPERATURE=0.0
OLLAMA_BASE_URL=http://localhost:11434

# Embedding Configuration
EMBEDDING_MODEL=all-minilm
CHUNK_SIZE=800
CHUNK_OVERLAP=100

# Vector Store Configuration
VECTOR_STORE_TYPE=clickhouse
SIMILARITY_SEARCH_K=4

# LLM Configuration
LLM_TYPE=ollama

# Logging Configuration
LOG_LEVEL=INFO

# OpenAI Configuration (if using OpenAI instead of Ollama)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-3.5-turbo

# HuggingFace Configuration (if using HuggingFace models)
# HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2
